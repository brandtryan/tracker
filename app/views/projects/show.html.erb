<h1><%= @project.name %></h1>
<p><%= link_to 'Edit Project', edit_project_path(@project) %></p>
<p>Company: <%= @project.company.name %></p>
<p>Default Rate: <%= @project.default_rate %></p>
<p>Slug: <%= @project.slug %></p>

<% if @project.works.size > 0 %>
<table>
  <tbody>
    <tr>
      <th>View</th>
      <th>User</th>
      <th>Projects</th>
      <th>Date/Time</th>
      <th>Hours</th>
    </tr>  
    <%= render partial: "works/work_item", collection: @project.works %>  
  </tbody>
</table>
<% else %>
<p>No work items</p>
<% end %>
<% content_for :aside do %>
  <% render 'sidebar' %>
<% end %>
