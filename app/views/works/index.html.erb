<h1>Works: index</h1>

<p>Here are all of the work items:</p>

<table>
  <tbody>
    <tr>
      <th>View</th>
      <th>User</th>
      <th>Project</th>
      <th>Date/Time</th>
      <th>Hours</th>
    </tr>  
    <% @works.each do |work_item| %>
      <tr>
        <td><%= link_to 'View', work_item %>
        <td><%= work_item.user %></td>
        <td><%= work_item.project %></td>
        <td><%= work_item.datetimeperformed.strftime('%m/%d/%Y %H:%M') %></td>
        <td><%= work_item.hours %></td>
      </tr>
    <% end %>
  </tbody>
</table>
